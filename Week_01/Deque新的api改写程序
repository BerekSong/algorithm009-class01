
Deque<String> deque = new LinkedList<String>();

deque.offerLast("a");
deque.offerLast("b");
deque.offerLast("c");
deque.offerLast("d");
System.out.println(deque);

String str = deque.peekLast();
System.out.println(str);
System.out.println(deque);

while (deque.size() > 0) {
    System.out.println(deque.pollLast());
}
System.out.println(deque);


deque.offerFirst("1");
deque.offerFirst("2");
deque.offerFirst("3");
deque.offerFirst("4");

System.out.println(deque);

String fistStr = deque.peekFirst();
System.out.println(fistStr);
System.out.println(deque);

while (deque.size() > 0) {
System.out.println(deque.pollFirst());
}
System.out.println(deque);